\definecolor{MyCyan}{rgb}{0,1,1}
\definecolor{MyBlue}{rgb}{0.2,0,1}
\tcbset{%
	width=\paperwidth,%
	height=2zh,%
	valign upper=center,%
	valign lower=center,%
	sidebyside,%
	lower separated=false,%
	sidebyside gap=0truemm,%
	halign lower=flush right,%
	colframe=MyCyan,%
	colback=black,%
	coltext=white,%
	sharp corners=all,%
	boxrule=-1pt,%
	beforeafter skip=0truemm,%
	leftright skip=0truemm,%
