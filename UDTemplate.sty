\newtcolorbox{titlepageblock}{%
	width=8zw,%
	height=3zh,%
	split=0.5,%
	sidebyside=false,%
	middle=0truemm,%
	halign upper=flush center,%
	halign lower=flush center,%
	colframe=MyBlue,%
	boxrule=0.5truemm}
